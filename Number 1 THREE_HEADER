{
	fstream Data;
	Data.open("three.txt", ios::in);
	for (int i = 0; i < 7; ++i)
	{
		Data.getline(a[i].name, 20, ' ');
		Data >> a[i].age;
		Data >> a[i].gpa;
	}
	Data.close();
};
